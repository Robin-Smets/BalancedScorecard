<MainFrame>:
    cols: 2
    rows: 1

    MDBoxLayout:
        id: nav_panel
        orientation: 'vertical'
        size_hint_x: None
        width: 150

        MDRaisedButton:
            id: sales_nav_button
            text: 'Sales'
            size_hint_x: 1
            size_hint_y: None
            height: 50
            on_press: root.open_sales()

        MDRaisedButton:
            id: purchasing_nav_button
            text: 'Purchasing'
            size_hint_x: 1
            size_hint_y: None
            height: 50
            on_press: root.open_purchasing()

        Widget:
            id: empty_widget

    MDBoxLayout:
        id: content_area
        orientation: 'vertical'

        MDBoxLayout:
            id: main_menu
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: 50

            MDRaisedButton:
                id: time_unit_button
                text: 'Zeiteinheit'
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: app.menu.open()
                size_hint_x: None
                width: 150

            MDRaisedButton:
                id: start_date_button
                text: 'Startdatum'
                width: 150
                size_hint_x: None
                on_press: root.open_date_picker('start')

            MDRaisedButton:
                id: end_date_button
                text: 'Enddatum'
                width: 150
                size_hint_x: None
                on_press: root.open_date_picker('end')

            MDRaisedButton:
                id: load_data_button
                text: 'Load Data'
                width: 200
                size_hint_x: None
                on_press: root.call_method_on_child('draw_order_volume_plot')

            MDRaisedButton:
                id: options_button
                text: 'Options'
                width: 200
                size_hint_x: None
                on_press: root.open_options_dialog()

        MDBoxLayout:
            id: module_container
            orientation: 'horizontal'
            size_hint_x: 1
